@model lastTest.Models.VMLogin
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f8f9fa;
        }
        .login-container {
            background-color: white;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .login-title {
            margin-bottom: 1.5rem;
            font-size: 1.5rem;
            font-weight: 600;
            text-align: center;
        }
        .login-button {
            width: 100%;
        }
        .validation-message {
            margin-top: 1rem;
            color: red;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <form asp-controller="Access" asp-action="Login" method="post">
            <div class="login-title">Login</div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary login-button">Login</button>
            @if (ViewData["ValidateMessage"] != null)
            {
                <div class="validation-message">@ViewData["ValidateMessage"]</div>
            }
        </form>
        <p class="text-center mt-3">
            <a asp-action="Register">Register Now</a>
        </p>
    </div>
</body>
</html>
